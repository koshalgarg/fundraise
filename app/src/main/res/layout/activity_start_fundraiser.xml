<FrameLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <ScrollView
        android:layout_width="match_parent"
        android:fillViewport="true"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="#3b5998"
                android:layout_margin="16dp">

                 <android.support.design.widget.TextInputEditText                    
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxEms="1"
                    android:maxLines="1"
                    android:textColor="#3b5998"
                    android:inputType="textPersonName"
                    android:hint="FOR"
                    android:id="@+id/et_start_for" />




            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="#3b5998"
                android:layout_margin="16dp">



             <android.support.design.widget.TextInputEditText                    
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxEms="1"
                android:maxLines="1"
                android:textColor="#3b5998"
                android:hint="Title"
                android:id="@+id/et_start_title" />

            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="#3b5998"
                android:layout_margin="16dp">


                <AutoCompleteTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#3b5998"
                    android:hint="category"
                    android:id="@+id/et_start_category" />

            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="#3b5998"
                android:layout_margin="16dp">



                 <android.support.design.widget.TextInputEditText                    
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxEms="1"
                    android:maxLines="1"
                    android:textColor="#3b5998"
                    android:hint="Target"
                    android:inputType="number"
                    android:id="@+id/et_start_target" />

            </android.support.design.widget.TextInputLayout>



                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:textColorHint="#3b5998">


                     <android.support.design.widget.TextInputEditText                    
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxEms="1"
                        android:maxLines="1"
                        android:textColor="#3b5998"
                        android:hint="Target Date"
                        android:inputType="date"
                        android:id="@+id/et_start_date" />

                </android.support.design.widget.TextInputLayout>







            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="#3b5998"
                android:layout_margin="16dp">



                 <android.support.design.widget.TextInputEditText                    
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxEms="1"
                    android:maxLines="1"
                    android:textColor="#3b5998"
                    android:hint="PHONE"
                    android:inputType="number"
                    android:id="@+id/et_start_phone" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="#3b5998"
                android:layout_margin="16dp">



                 <android.support.design.widget.TextInputEditText                    
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxEms="1"
                    android:maxLines="1"
                    android:textColor="#3b5998"
                    android:hint="CITY"
                    android:id="@+id/et_start_city" />

            </android.support.design.widget.TextInputLayout>



            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="#3b5998"
                android:layout_margin="16dp">



                 <android.support.design.widget.TextInputEditText                    
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:textColor="#3b5998"
                    android:hint="Short Description"
                    android:id="@+id/et_start_description" />

            </android.support.design.widget.TextInputLayout>


            <ImageView
                android:layout_width="match_parent"
                android:id="@+id/iv_start_image"
                android:layout_height="120dp"
                android:src="@drawable/add"/>


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="#3b5998"
                android:layout_margin="16dp">



                 <android.support.design.widget.TextInputEditText                    
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#3b5998"
                    android:hint="Story"
                    android:id="@+id/et_start_story" />

            </android.support.design.widget.TextInputLayout>




            <TextView
                android:text="GO"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:textColor="#FFFFFF"
                android:layout_margin="16dp"
                android:gravity="center"
                android:padding="10dp"

                android:textSize="24sp"
                android:background="#3b5998"

                android:id="@+id/tv_start_start"
                />

        </LinearLayout>


    </ScrollView>

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:id="@+id/pb_start"
        />

</FrameLayout>